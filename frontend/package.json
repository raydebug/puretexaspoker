{
  "name": "poker-game-frontend",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^16.18.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "js-cookie": "^3.0.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.3",
    "react-scripts": "5.0.1",
    "socket.io-client": "^4.8.1",
    "styled-components": "^6.1.18",
    "typescript": "^4.9.5",
    "web-vitals": "^2.1.4",
    "zustand": "^4.5.2"
  },
  "scripts": {
    "pretest": "rimraf cypress/screenshots cypress/videos",
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "jest",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "start": "react-scripts start",
    "eject": "react-scripts eject",
    "start:all": "concurrently \"cd ../backend && npm run dev\" \"npm run dev\"",
    "test:e2e:all": "concurrently \"cd ../backend && npm run dev\" \"npm run dev\" \"wait-on http://localhost:3000 && npm run test:e2e\"",
    "test:e2e:all:open": "concurrently \"cd ../backend && npm run dev\" \"npm run dev\" \"wait-on http://localhost:3000 && npm run test:e2e:open\""
  },
  "proxy": "http://localhost:3001",
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@badeball/cypress-cucumber-preprocessor": "^12.0.0",
    "@bahmutov/cypress-esbuild-preprocessor": "^2.2.0",
    "@socket.io/component-emitter": "^3.1.2",
    "@testing-library/cypress": "^10.0.3",
    "@testing-library/jest-dom": "^6.4.2",
    "@types/cypress": "^1.1.3",
    "@types/js-cookie": "^3.0.6",
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "cypress": "^12.17.4",
    "cypress-cucumber-preprocessor": "^4.3.1",
    "esbuild": "^0.19.8",
    "vite": "^5.1.6",
    "wait-on": "^7.2.0"
  }
}
